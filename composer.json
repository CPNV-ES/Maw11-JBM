{
  "require": {
    "php": "^8.4",
    "ext-sqlite3": "*"
  },
  "autoload": {
    "psr-4": {
      "Maw11Jbm\\": "app/",
      "core\\": "core/"
    },
    "files": [
      "core/View.php"
    ]
  },
  "config": {
    "optimize-autoloader": true
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.87",
    "phpstan/phpstan": "^2.1"
  },
  "scripts": {
    "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon",
    "php-fix": "vendor/bin/php-cs-fixer fix"
  }
}
